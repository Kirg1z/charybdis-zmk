#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
    require-prior-idle-ms = <150>; \
  };

#define COMBO_TERM_FAST 14
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 40

combos {
  compatible = "zmk,combos";

  COMBO(l_leftclick, &mkp LCLK, 11 12, BASE, COMBO_TERM_SLOW)
  COMBO(l_rightclick, &mkp RCLK, 21 22, BASE, COMBO_TERM_SLOW)
  COMBO(l_capslock, &kp CAPSLOCK, 1 2, BASE, COMBO_TERM_SLOW)

  COMBO(l_close, &kp LA(F4), 20 21, BASE, COMBO_TERM_SLOW)
  COMBO(l_close, &kp LA(F4), 28 29, BASE, COMBO_TERM_SLOW)
  COMBO(r_mypc, &kp LG(E), 7 8, BASE, COMBO_TERM_SLOW)
  COMBO(r_back, &kp LA(LEFT), 17 18, NAV, COMBO_TERM_SLOW)
  COMBO(r_folderup, &kp LA(UP), 27 28, NAV, COMBO_TERM_SLOW)
  COMBO(l_capslock, &kp CAPSLOCK, 1 2, BASE, COMBO_TERM_SLOW)
  COMBO(r_language, &kp LG(SPACE), 26 27, BASE, COMBO_TERM_SLOW)
}; 
